@using umbraco;
@using umbraco.MacroEngines;
@using DigibizAdvancedMediaPicker;
@inherits umbraco.MacroEngines.DynamicNodeContext

<script type="text/javascript" src="http://cloud.github.com/downloads/malsup/cycle/jquery.cycle.all.latest.js"></script>
<script src="/scripts/home.js" type="text/javascript"></script>

<div id="slideshow">
    @{
        if (@Model.HasValue("slideImatges"))
        {
            dynamic imatges = @Model.slideImatges.mediaItem;
            if (imatges.Count()!=0)
            {
                foreach (var imatge in imatges)
                {
                    <img src="@imatge.Image.umbracoFile" alt="@imatge.Image.nodeName @Dictionary.keywords"/>
                }
            }
        }
    }
</div>

