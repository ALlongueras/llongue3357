@using umbraco
@using umbraco.MacroEngines;

<script src="/scripts/jquery/jquery.isotope.js" type="text/javascript"></script>
<script src="/scripts/publicacions.js" type="text/javascript"></script>

<div class="cos_central" id="publicacions">
    @{
        <ul id="filters">
          <li><a href="#" data-filter=".publicacionsPremis">@Dictionary.mostrarPublicacions.ToUpper()</a></li>
          <li><a href="#" data-filter=".publicacio">@Dictionary.publicacions.ToUpper()</a></li>
          <li><a href="#" data-filter=".premi">@Dictionary.premis.ToUpper()</a></li>
        </ul>
        <div class="projecte">
            @{
                for (int i = 0; i < 2; i++)
                {
                    foreach (dynamic item in @Model.Children[i].Children)
                    {
                        if (item.HasValue("imatge"))
                        {
                            <div class="publicacionsPremis @(i == 0 ? "publicacio" : "premi") hide">
                                <img src="@item.imatge.mediaItem[0].Image.umbracoFile"  height="250" width="300" alt="@item.Name @Dictionary.keywords"/>
                                <span></span>
                                <p>@item.descripcio</p>    
                            </div>   
                        }
                    }
                }
            }
        </div>
    }
</div>